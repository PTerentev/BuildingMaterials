@{
    ViewData["Title"] = "Заказ";
}

<div class="row">
    <div class="col-md-4 order-md-2 mb-4">
        <h4 class="d-flex justify-content-between align-items-center mb-3">
            <span class="text-muted">Корзина</span>
            <span class="badge badge-secondary badge-pill">2</span>
        </h4>
        <ul class="list-group mb-3">
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">Композитный материа́л</h6>
                </div>
                <span class="text-muted">350₽ * 20</span>
            </li>
            <li class="list-group-item d-flex justify-content-between lh-condensed">
                <div>
                    <h6 class="my-0">Доска 20х146x2000 мм</h6>
                </div>
                <span class="text-muted">250₽ * 15</span>
            </li>
            <li class="list-group-item d-flex justify-content-between">
                <span>Всего</span>
                <strong>10750₽</strong>
            </li>
        </ul>
    </div>
    <div class="col-md-8 order-md-1">
        <h4 class="mb-3">Данные</h4>
        <form class="needs-validation" novalidate="" asp-controller="Home" asp-action="Checkout">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label for="firstName">Имя</label>
                    <input type="text" class="form-control" id="firstName" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid first name is required.
                    </div>
                </div>
                <div class="col-md-6 mb-3">
                    <label for="lastName">Фамилия</label>
                    <input type="text" class="form-control" id="lastName" placeholder="" value="" required="">
                    <div class="invalid-feedback">
                        Valid last name is required.
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label for="address">Номер телефона</label>
                <input type="text" class="form-control">
            </div>

            <div class="mb-3">
                <label for="address">Адрес</label>
                <input type="text" class="form-control" id="address" placeholder="1234 Main St" required="">
                <div class="invalid-feedback">
                    Please enter your shipping address.
                </div>
            </div>

            <hr class="mb-4">
            <button class="btn btn-primary btn-lg btn-block" type="submit">Оформить заказ</button>
        </form>
    </div>
</div>
